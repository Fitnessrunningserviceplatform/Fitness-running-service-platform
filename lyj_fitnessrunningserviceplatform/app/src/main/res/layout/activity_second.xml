<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名:"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="18sp"
        android:layout_below="@id/tv_name"
        android:layout_alignBaseline="@+id/editText_pwd"
        android:layout_alignBottom="@+id/editText_pwd"
        android:layout_toLeftOf="@+id/editText_pwd"
        android:layout_toStartOf="@+id/editText_pwd" />

    <TextView
        android:id="@+id/tv_againpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重复密码:"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:layout_below="@+id/editText_pwd"
        android:layout_toLeftOf="@+id/editText_pwd"
        android:layout_toStartOf="@+id/editText_pwd" />



    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱:"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_againpwd"
        android:layout_toLeftOf="@+id/editText_QQ"
        android:layout_toStartOf="@+id/editText_QQ" />

    <TextView
        android:id="@+id/tv_QQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QQ:"
        android:textSize="18sp"
        android:layout_marginTop="31dp"
        android:layout_below="@id/tv_email"
        android:layout_alignBaseline="@+id/editText_QQ"
        android:layout_alignRight="@id/tv_email" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tv_email"
        android:layout_alignBaseline="@id/tv_email"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="请输入QQ"
        android:id="@+id/editText_QQ"
        android:layout_below="@id/editText_email"
        android:layout_alignLeft="@+id/editText_againpwd"
        android:layout_alignStart="@+id/editText_againpwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_againpwd"
        android:layout_toRightOf="@id/tv_againpwd"
        android:hint="请再次输入密码"
        android:layout_below="@id/editText_pwd"
        android:id="@+id/editText_againpwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:id="@+id/editText_pwd"
        android:layout_below="@+id/editText_name"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_name"
        android:layout_toRightOf="@id/tv_name"
        android:hint="请输入用户名"
        android:id="@+id/editText_name" />

   <Button
        android:id="@+id/button_register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_QQ"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/editText_QQ"
        android:text="注册"
        android:background="#00C5CD"/>

</RelativeLayout>